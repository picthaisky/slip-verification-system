# Application Settings
APP_NAME=OCR Microservice
APP_VERSION=1.0.0
DEBUG=False

# API Settings
API_PREFIX=/api/ocr
HOST=0.0.0.0
PORT=8000

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# OCR Settings
OCR_ENGINES=["paddleocr", "easyocr"]
OCR_LANGUAGES=["th", "en"]
OCR_CONFIDENCE_THRESHOLD=0.6

# Image Processing Settings
MAX_IMAGE_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png"]
IMAGE_PREPROCESSING=True

# Processing Settings
MAX_PROCESSING_TIME=30
BATCH_SIZE=10
RETRY_ATTEMPTS=3

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/ocr_service.log
