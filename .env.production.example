# =============================================================================
# ENVIRONMENT CONFIGURATION - PRODUCTION
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# =============================================================================
# APPLICATION
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
APP_NAME=SlipVerification
APP_VERSION=1.0.0

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=SlipVerificationDb
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_CONNECTION_STRING=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT},password=${REDIS_PASSWORD}

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_KEY_AT_LEAST_32_CHARACTERS
JWT_ISSUER=SlipVerificationAPI
JWT_AUDIENCE=SlipVerificationClient
JWT_EXPIRY_MINUTES=60

# =============================================================================
# FILE STORAGE
# =============================================================================
FILE_STORAGE_BASE_PATH=/app/uploads
FILE_STORAGE_BASE_URL=https://api.slipverification.com/uploads
FILE_STORAGE_MAX_SIZE_MB=50

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
REGISTRY=ghcr.io/your-organization
TAG=latest

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/backups
RETENTION_DAYS=30
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_TO_ENCRYPTION_KEY

# AWS S3 Backup
S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Azure Blob Storage Backup
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER=backups

# =============================================================================
# MONITORING
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# Alertmanager
ALERTMANAGER_PORT=9093

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@slipverification.com

# Line Notify
LINE_NOTIFY_TOKEN=your-line-notify-token

# =============================================================================
# SSL/TLS
# =============================================================================
SSL_DOMAIN=slipverification.com
SSL_EMAIL=admin@slipverification.com
SSL_CERT_PATH=/etc/nginx/ssl
LETSENCRYPT_STAGING=false

# =============================================================================
# KUBERNETES
# =============================================================================
K8S_NAMESPACE=slip-verification
K8S_CLUSTER_NAME=production
K8S_CONTEXT=production-context

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_API_REQUESTS_PER_SECOND=10

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=https://slipverification.com,https://www.slipverification.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# =============================================================================
# SECURITY
# =============================================================================
# Enable/disable features
ENABLE_SWAGGER=false
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true
ENABLE_CORS=true

# Security headers
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
