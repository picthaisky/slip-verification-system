{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=SlipVerificationDb;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Secret": "ThisIsAVerySecretKeyForJWTToken_MustBeAtLeast32Characters_PleaseChangeInProduction",
    "Issuer": "SlipVerificationAPI",
    "Audience": "SlipVerificationClient",
    "ExpiryMinutes": "60",
    "RefreshTokenExpiryDays": "7"
  },
  "FileStorage": {
    "Provider": "Local",
    "BasePath": "uploads",
    "BaseUrl": "http://localhost:5000/uploads",
    "MaxFileSizeMB": "10"
  },
  "FileValidation": {
    "MaxFileSizeInBytes": 10485760,
    "EnableVirusScan": false,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf" ]
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "slip-files",
    "UseSSL": false,
    "Region": "us-east-1"
  },
  "S3": {
    "Region": "us-east-1",
    "BucketName": "slip-files",
    "AccessKeyId": "",
    "SecretAccessKey": "",
    "CloudFrontDistributionDomain": ""
  },
  "AzureBlob": {
    "ConnectionString": "",
    "ContainerName": "slip-files",
    "CdnEndpoint": ""
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "1m",
    "QueueLimit": 10
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:3000"
    ]
  },
  "LineNotify": {
    "DefaultToken": "",
    "TimeoutSeconds": 30
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@slipverification.com",
    "FromName": "Slip Verification System",
    "EnableSsl": true
  },
  "PushNotification": {
    "ProjectId": "",
    "ServerKey": "",
    "TimeoutSeconds": 30
  },
  "Sms": {
    "AccountSid": "",
    "AuthToken": "",
    "FromNumber": "",
    "TimeoutSeconds": 30
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "RetryCount": 3,
    "RetryDelaySeconds": 5
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ApiVersioning": {
    "DefaultApiVersion": "1.0",
    "AssumeDefaultVersionWhenUnspecified": true,
    "ReportApiVersions": true
  }
}
