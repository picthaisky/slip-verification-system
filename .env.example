# =============================================================================
# Slip Verification System - Environment Variables Template
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env file to version control
# =============================================================================

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=SlipVerificationDb
DB_USER=postgres
DB_PASSWORD=postgres

# Full Connection String (Alternative to individual DB settings)
CONNECTION_STRING=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Include Error Detail=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT}

# JWT Configuration
JWT_SECRET=ThisIsAVerySecretKeyForJWTToken_MustBeAtLeast32Characters_PleaseChangeInProduction
JWT_ISSUER=SlipVerificationAPI
JWT_AUDIENCE=SlipVerificationClient
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# File Storage Configuration
FILE_STORAGE_BASE_PATH=uploads
FILE_STORAGE_BASE_URL=http://localhost:5000/uploads
FILE_STORAGE_MAX_SIZE_MB=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_MINUTES=1
RATE_LIMIT_QUEUE_LIMIT=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Logging Configuration
LOG_LEVEL_DEFAULT=Information
LOG_LEVEL_MICROSOFT=Warning
LOG_LEVEL_SYSTEM=Warning
LOG_FILE_PATH=Logs/log-.txt

# API Versioning
API_DEFAULT_VERSION=1.0
API_ASSUME_DEFAULT_WHEN_UNSPECIFIED=true
API_REPORT_VERSIONS=true

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL_SECONDS=30

# External Services (Optional)
# OCR Service
OCR_SERVICE_URL=http://localhost:8000
OCR_SERVICE_API_KEY=

# Notification Services
# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@slipverification.com
SMTP_FROM_NAME=Slip Verification System

# LINE Notify
LINE_NOTIFY_TOKEN=

# Firebase Cloud Messaging
FCM_SERVER_KEY=

# SMS Service
SMS_API_KEY=
SMS_API_SECRET=

# MinIO / S3 (if using cloud storage instead of local)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=slip-verifications
MINIO_USE_SSL=false

# RabbitMQ (for message queue)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# Monitoring & Analytics
SENTRY_DSN=
APPLICATION_INSIGHTS_KEY=

# Docker-specific
COMPOSE_PROJECT_NAME=slip-verification

# pgAdmin
PGADMIN_EMAIL=admin@slipverification.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
